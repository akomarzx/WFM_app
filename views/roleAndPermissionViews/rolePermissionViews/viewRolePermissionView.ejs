<% layout('./roleAndPermissionViews/roleAndPermissionLayout') %>
<div class="container-fluid">
    <div class="row">
        <div class="border border-secondary col-md-4 ms-2 mt-4 p-2">
            <h2>Revoke Permission to a Role</h2>
                <div class="form-group mt-3">
                    <label for="role_name">Role</label>
                    <select class="form-select" aria-label="Current roles" name="role_uuid" id="role_name">
                        <option selected>Select Role</option>
                        <% roles.forEach(element => { %>
                            <option value="<%= element.uuid %>"><%= element.role_name %></option>
                        <% }) %>
                    </select>
                </div>
                <table class="table" id="permTable">
                    <tr>
                        <th scope="col">Permissions</th>
                    </tr>
                </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/script2.js"></script>
