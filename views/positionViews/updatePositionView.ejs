<% layout('./positionViews/positionLayout') %>
    <div class="container-fluid">
        <div class="row">
            <div class="border border-secondary col-md-4 ms-2 mt-4 p-2">
                <h2>Update a Position</h2>
                <form action="/positions?_method=PATCH" method="post" id="mainForm">
                    <select class="form-select" aria-label="current roles"
                        onchange='document.getElementById("positionName").value = getSelectedOption(this)' name="uuid">
                        <option selected>Select Position to Update</option>
                        <% positions.forEach(element=> { %>
                            <option value="<%= element.uuid %>">
                                <%= element.positionName %>
                            </option>
                            <% }) %>
                    </select>
                    <div class="form-group mt-3">
                        <label for="positionName">Updated value: </label>
                        <input type="text" name="positionName" id="positionName">
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-secondary btn-sm" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function getSelectedOption(sel) {
            return sel.options[sel.selectedIndex].text;
        }   
    </script>
    <script src="/js/script3.js"></script>