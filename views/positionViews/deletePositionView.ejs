<% layout('./positionViews/positionLayout') %>
    <div class="container-fluid">
        <div class="row">
            <div class="border border-secondary col-md-4 ms-2 mt-4 p-2">
                <h2>Delete a Position</h2>
                <form action="/positions?_method=DELETE" method="post" id="mainForm">
                    <select class="form-select" aria-label="Current permission" name="uuid">
                        <option selected>Select Position to Delete</option>
                        <% positions.forEach(element=> { %>
                            <option value="<%= element.uuid %>">
                                <%= element.positionName %>
                            </option>
                            <% }) %>
                    </select>
                    <div class="form-group mt-3">
                        <button class="btn btn-secondary btn-sm" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/script3.js"></script>